<%= form_tag password_reset_path do %>
  <%= label :user, :username %>
  <%= text_field :user, :username  %>
  <%= label :user, :email %>
  <%= text_field :user, :email  %>
  <%= label :user, :phone_number %>
  <%= text_field :user, :phone_number  %>
  <%= submit_tag "Get OTP" %>
  <%= render 'password_resets/error_messages' %>
<% end %>

